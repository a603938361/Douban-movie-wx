/* pages/Movies/Movies-detail/Movies-detail.wxss */

@import "../stars/stars.wxss";

.detail-container{
  direction: flex;
  flex-direction: column;
}

.header-img{
  width: 100%;
  height: 320rpx;
  /* 设置图片虚化 */
  -webkit-filter: blur(20rpx);
}

.head-img-hover{
  width: 100%;
  height: 320rpx;
  /* 脱离文档流 使其在view上面*/
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size: 19px;
  color: #999;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.sub-title{
  font-size: 28px;
  color: #999;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font{

  color: white;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.movie-img{
  height: 238rpx;
  width: 175rpx;
/* 脱离文档流 */
  position: absolute;
  top: 160rpx;
  right: 30rpx; 
}

.summary{
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title{
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark{
  margin-left: 40rpx;
  margin-right: 20rpx;
  /* 不换行 */
  white-space: nowrap;
  color: #999;
}

.hr{
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}

.synopsis{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.summary-content{
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

.cast{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.cast-font{
  color: #999;
  margin-bottom: 40rpx;
}

.cast-container{
  /* 行内列排布 */
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast-imgs{
  white-space: nowrap;
}

.cast-img{
  width: 170rpx;
  height: 210rpx;
}

.cast-name{
  margin: 10rpx auto 0;
  word-break: break-all;
}

