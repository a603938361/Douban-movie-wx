@import "./bottom-view-template.wxss";

.post_header {
  margin: 10rpx 0 20rpx 10rpx;
}

.post_header_icon {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}

.post_header_text {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post_title_text {
  margin-left: 20rpx;
  vertical-align: middle;
  color: #333;
  margin-bottom: 10px;
  font-size: 34rpx;
  font-weight: 600;
}

.post_image {
  margin-left: 16px;
  width: 100%;
  height: 372rpx;
  margin-bottom: 15px;
  margin: auto 0;
}

.post_content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}


.post_container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: '#000';
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
